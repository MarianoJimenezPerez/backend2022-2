{{#if nombre}}
<div class="container mt-3">
    <div class="alert alert-success d-flex justify-content-between" role="alert">
        <h4 id="user-box-title" class="alert-heading">Bienvenido! {{nombre}}</h4>
    
        <button class="btn btn-danger"><a class="text-decoration-none text-white" href="/logout">Desloguear</a></button>
    </div>
</div>
{{else}}
<div class="container mt-3">
    <div class="alert alert-danger" role="alert">
        <p>Todavía no te has logueado, has click <a href="/login" class="alert-link">aquí</a> para hacerlo</p>
    </div>
</div>
{{/if}}